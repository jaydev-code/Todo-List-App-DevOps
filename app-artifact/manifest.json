  "shortcuts": [
    {
      "name": "Add New Task",
      "short_name": "New Task",
      "description": "Quickly add a new DevOps task",
      "url": "/?source=shortcut&action=new-task",
      "icons": [
        {
          "src": "icons/shortcut-add-96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "View Active Tasks",
      "short_name": "Active",
      "description": "View all active DevOps tasks",
      "url": "/?source=shortcut&filter=active",
      "icons": [
        {
          "src": "icons/shortcut-active-96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Quick Deploy",
      "short_name": "Deploy",
      "description": "Start a quick deployment",
      "url": "/?source=shortcut&action=deploy",
      "icons": [
        {
          "src": "icons/shortcut-deploy-96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "share_target": {
    "action": "/?share",
    "method": "GET",
    "enctype": "application/x-www-form-urlencoded",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  
  "protocol_handlers": [
    {
      "protocol": "web+devops",
      "url": "/?protocol=%s"
    }
  ],
  
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "permissions": [
    "notifications",
    "clipboard-write",
    "clipboard-read"
  ],
  
  "related_applications": [],
  "prefer_related_applications": false,
  
  "serviceworker": {
    "src": "service-worker.js",
    "scope": "/",
    "use_cache": true
  },
  
  "capture_links": "new-client",
  "isolated_storage": true,
  "fingerprints": false,
  
  "version": "3.0.0",
  "author": "DevOps Team",
  
  "developer": {
    "name": "DevOps Solutions Inc.",
    "url": "https://devops-solutions.example.com"
  },
  
  "features": [
    "cross-origin-isolated",
    "serial"
  ],
  
  "platform": "web",
  "iarc_rating_id": "e84b072d-719b-4573-9500-0cabd1b9b941"
}