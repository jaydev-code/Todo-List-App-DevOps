{
  "name": "my-devops-pwa-project",
  "version": "1.0.0",
  "description": "A DevOps-oriented To-Do PWA with CI/CD, Monitoring, and Android TWA support.",
  "main": "app-artifact/app.js",
  "scripts": {
    "dev": "npx http-server app-artifact -p 8080 -c-1",
    "start": "npm run dev",
    "build": "node tools/build.js",
    "build:prod": "NODE_ENV=production npm run build",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "analyze": "node tools/bundle-analyzer.js",
    "bump-version": "bash infrastructure/scripts/bump-version.sh",
    "health-check": "bash infrastructure/scripts/health-check.sh",
    "release": "bash infrastructure/scripts/release.sh"
  },
  "keywords": [
    "pwa",
    "devops",
    "ci-cd",
    "twa",
    "automation"
  ],
  "author": "Expert Developer",
  "license": "MIT",
  "devDependencies": {
    "http-server": "^14.1.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "terser": "^5.26.0",
    "postcss": "^8.4.32",
    "autoprefixer": "^10.4.16"
  }
}
